{
  "name": "ckpt-react-site",
  "version": "0.0.1",
  "description": "CKPT Web frontend in React+Flux+Immutable",
  "repository": "https://github.com/ckpt/web-frontend",
  "main": "js/app.js",
  "dependencies": {
    "flux": "^2.1.1",
    "history": "^1.17.0",
    "keymirror": "^0.1.1",
    "moment": "^2.12.0",
    "object-assign": "^3.0.0",
